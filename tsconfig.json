{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "./build",
        "rootDir": "src",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "types": ["node"],
        "declaration": false,
        "emitDeclarationOnly": false,
        "isolatedModules": false,
        "lib": ["es2019", "DOM"]
    }
}
