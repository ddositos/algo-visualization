{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "./build",
        "rootDir": "./src",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "types": ["node"],
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "lib": ["es2019"]
    }
}
